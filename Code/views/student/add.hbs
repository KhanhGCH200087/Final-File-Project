<form action="/student/add" method="post" enctype="multipart/form-data" >
  <h1>Add new Student</h1>
  Name: <input type="text" name="name" id="" required>
  <br><br>
  Birth: <input type="date" name="dob" id="" required>
  <br><br>
  Gender: <input type="text" name="gender" required>
  <br><br>
  Address:<input type="text" name="address" required>
  <br><br>
  Email: <input type="email" name="email" id="" required>
  <br><br>
  Password: <input type="text" name="password" id="" required>
  <br><br>
  Image: <input type="file" name="image" accept="image/*" required>
  <br><br>
  Role: 
  <select name="role" id="">
    {{#each roleList}}
    <option value="{{_id}}">
        {{role}}
    </option>
    {{/each}}
  </select>
  {{!-- fix later --}}
  <br><br>
  Faculty: 
  <select name="faculty" id="">
    {{#each facultyList}}
    <option value="{{_id}}">
        {{name}}
    </option>
    {{/each}}
  </select>
  <input  type="submit" value="Add">
</form>