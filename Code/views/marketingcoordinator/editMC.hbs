<!-- edit.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit MC</title>
</head>
<body>
    <h1>Edit MC</h1>
    <form action="/marketingcoordinator/editMC/{{marketingcoordinator._id}}" method="POST" enctype="multipart/form-data">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{marketingcoordinator.name}}" required><br>

        <label for="dob">Date of Birth:</label>
        <input type="date" id="dob" name="dob" value="{{formatDate marketingcoordinator.dob}}" required><br>

        <label for="gender">Gender:</label>
        <input type="text" id="gender" name="gender" value="{{marketingcoordinator.gender}}" required><br>

        <label for="address">Address:</label>
        <input type="text" id="address" name="address" value="{{marketingcoordinator.address}}" required><br>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" value="{{marketingcoordinator.password}}" required><br>

        <label for="image">Image:</label>
        <input type="file" id="image" name="image"><br>

        <button type="submit">Update</button>
    </form>
</body>
</html>
